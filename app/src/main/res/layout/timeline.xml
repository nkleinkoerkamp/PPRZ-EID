<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <!-- icon -->
    <ImageView
        android:id="@+id/item_icon_timeline"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        />

    <!-- Ac Name -->
    <TextView
        android:id="@+id/ac_name_timeline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_icon_timeline"
        android:layout_alignBaseline="@+id/ac_battery_timeline"
        android:text="AC Name"
        android:textIsSelectable="false"
        android:clickable="false"
        android:textStyle="bold" />

    <!-- Ac Battery -->
    <TextView
        android:id="@+id/ac_battery_timeline"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="#dddddd"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="n\a" />

</RelativeLayout>
